<form action="/calculate" method="post" class="calculator-form">
  <input type="text" name="array" class="calculator-form__array" placeholder="Add an array...">
  <select name="type">
    <option value="average">average</option>
    <option value="mode">mode</option>
    <option value="median">median</option>
    <option value="add">add</option>
  </select>

  <input type="submit" class="calculator-form__submit" value="Submit">

</form>

<h1>
  <%= @type%>
  <%= @result ? ":" : "" %>
  <%= @result%>
</h1>

<h3 style="color:red">
  <%= @error %>
</h3>
